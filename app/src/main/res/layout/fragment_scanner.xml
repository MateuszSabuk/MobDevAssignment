<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ScannerFragment"
    android:orientation="vertical"
    android:padding="5dp">

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/surface_view"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <EditText
            android:id="@+id/isbnNumFinder"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write ISBN number here:\n"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/isbnNumBtn"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="find book"
            android:layout_weight="3"/>


    </LinearLayout>


    <Button
        android:id="@+id/manual_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/manual_add_button_text"
        android:textSize="15sp"
        android:layout_weight="3"/>


</LinearLayout>